<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8bW92aWVzfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60); background-position: 50% 25%">
  <div class="container">
    <h1>Welcome to our <strong>cineapp</strong>!</h1>
    <p>Movies you have to watch at least once in your life</p>
  </div>
</div>

<div class="container my-5">
  <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3  g-4">
    <% @lists.each do |list| %>
        <div class="col">
          <%= link_to list_path(list) do %>
            <div class="card-category mb-4" style="background-image: linear-gradient(rgba(255,255,255,0.2), rgba(0,0,0,0.3)), url(<%= list.image_url %>); background-position: center;">
              <%= list.name %>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
