<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= @list.image_url %>); background-position: center">
  <div class="container">
    <h1 class="text-center fs-1"><%= @list.name %></h1>
  </div>
</div>

<div class="form-add container mt-4 p-3 w-50 bg-light">
  <h1 class="text-center">Add a new movie</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>

    <%= f.input :comment %>
    <p></p>
    <%= f.association :movie %>
    <p></p>
    <%= f.button :submit, class: 'mt-3 btn btn-primary text-center submit'%>

  <% end %>
</div>
